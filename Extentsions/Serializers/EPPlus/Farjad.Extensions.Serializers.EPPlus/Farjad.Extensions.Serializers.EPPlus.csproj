<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationIcon>Farjad.ico</ApplicationIcon>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageIcon>Farjad.png</PackageIcon>
    <Version>2.0.0</Version>
    <Authors>Mohammad Ramezani</Authors>
    <Company>Farjad</Company>
    <Description>Farjad is a powerful library for Domain Driven Design architecture, CQRS pattern, event driven development</Description>
    <PackageDescription>Farjad is a powerful library for Domain Driven Design architecture, CQRS pattern, event driven development</PackageDescription>
    <PackageProjectUrl>https://github.com/mohrmz/Farjad</PackageProjectUrl>
    <RepositoryUrl>https://github.com/mohrmz/Farjad</RepositoryUrl>
    <PackageReleaseNotes>Publish Github Packages</PackageReleaseNotes>
    <Copyright>All rights reserved for Mohammad Ramezani</Copyright>
    <PackageTags>ddd-architecture,cqrs-pattern,event-driven</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Farjad.ico" />
    <None Include="Farjad.png" Pack="true" PackagePath=""/>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Extensions\DependencyInjection\" />
    <Folder Include="Services\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.1" />
    <PackageReference Include="EPPlus" Version="6.0.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Abstractions\Farjad.Extensions.Serializers.Abstractions\Farjad.Extensions.Serializers.Abstractions.csproj" />
    <ProjectReference Include="..\..\..\Abstractions\Farjad.Extensions.Translations.Abstractions\Farjad.Extensions.Translations.Abstractions.csproj" />
  </ItemGroup>

</Project>
